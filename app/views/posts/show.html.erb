<div>
  <div>
    <h1>
      Post #<%= @the_post.id %> details
    </h1>

    <div>
      <div>
        <a href="/posts">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_post/<%= @the_post.id %>">
          Delete post
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Game
      </dt>
      <dd>
        <%= @the_post.game_id %>
      </dd>

      <dt>
        Gpt created
      </dt>
      <dd>
        <%= @the_post.gpt_created %>
      </dd>

      <dt>
        Body
      </dt>
      <dd>
        <%= @the_post.body %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_post.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_post.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit post
    </h2>

    <form action="/modify_post/<%= @the_post.id %>"  method="post" >
      <div>
        <label for="game_id_box">
          Game
        </label>

        <input type="text" id="game_id_box" name="query_game_id" value="<%= @the_post.game_id %>">
      </div>

      <div>
        <input type="checkbox" id="gpt_created_box" name="query_gpt_created" value="1" <%= "checked" if @the_post.gpt_created %>>

        <label for="gpt_created_box">
            Gpt created
        </label>
      </div>

      <div>
        <label for="body_box">
          Body
        </label>

        <textarea id="body_box" name="query_body"><%= @the_post.body %></textarea>
      </div>

      <button>
        Update post
      </button>
    </form>
  </div>
</div>

<hr>
