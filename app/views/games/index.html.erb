<h1>AIgatha</h1>
<h2><i>Create and solve detective puzzle games using AI</i><h2>
<h3>Customize your game</h3>
<div>
  <form action="/insert_game" method="post">
    <div>
    <label for="title">Title:</label>
    <input id="title" name="query_title">
    <br>

    <label for="setting">Choose your setting:</label>
    <select id="setting" name="query_setting">
      <option value="old mansion">old mansion</option>
      <option value="spaceship">spaceship</option>
      <option value="art museum">art museum</option>
      <option value="random">surprise me!</option>
    </select>
    </div>

    <div>
    <label for="difficulty">Choose your difficulty:</label>
    <select id="difficulty" name="query_difficulty">
      <option value="easy">easy</option>
      <option value="medium">medium</option>
      <option value="hard">hard</option>
    </select>
    </div>
    <input type="submit" value="Investigate!">
  </form>
</div>

<hr>
<div>
  <div>
    <table class="table">
      <thead>
      <tr>
        <th scope="col">
          ID
        </th>

        <th scope="col">
          Author
        </th>

        <th scope="col">
          Title
        </th>

        <th scope="col">
          Setting
        </th>

        <th scope="col">
          Difficulty
        </th>

        <th scope="col">
          Created at
        </th>

        <th scope="col">
          Number of queries
        </th>

        <th scope="col">
        </th>
      </tr>
      </thead>

      <tbody>
      <% @list_of_games.each do |a_game| %>
      <tr>
        <td>
          <%= a_game.id %>
        </td>

        <td>
          <%= a_game.author_id %>
        </td>

        <td>
          <%= a_game.title %>
        </td>

        <td>
          <%= a_game.setting %>
        </td>

        <td>
          <%= a_game.difficulty %>
        </td>

        <td>
          <%= time_ago_in_words(a_game.created_at) %> ago
        </td>

        <td>
          <%= Post.where(:game_id => a_game.id).where(:gpt_created => false).count %>
        </td>

        <td>
          <a href="/games/<%= a_game.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
